FROM cosmtrek/air:latest

ARG APPLICATION
ARG HTTP_PORT=8080
ARG GRPC_PORT=18080

WORKDIR /app

COPY go.mod go.sum ./

RUN go mod download

COPY /apps/${APPLICATION} ./apps/${APPLICATION}

WORKDIR /app/apps/${APPLICATION}

ENV HTTP_PORT=${HTTP_PORT}
ENV GRPC_PORT=${GRPC_PORT}

EXPOSE ${HTTP_PORT}
EXPOSE ${GRPC_PORT}

CMD [ "air", "-c", ".air.toml" ]